<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/ic_dot">

        <TextView
            android:id="@+id/textQuestion"
            android:layout_width="368dp"
            android:layout_height="225dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="TextView"
            android:textSize="25sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            android:background="@color/colorPrimary2"

            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/colorText"
            tools:layout_editor_absoluteY="16dp"
            app:layout_constraintHorizontal_bias="0.481"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="18dp" />

        <Button
            android:id="@+id/optionA_button"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="29dp"
            android:text="Button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textQuestion"

            android:background="@drawable/border"
            android:layout_below="@+id/textQuestion"
            android:layout_alignStart="@+id/textQuestion" />

        <Button
            android:id="@+id/optionB_button"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:text="Button"
            app:layout_constraintLeft_toRightOf="@+id/optionA_button"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textQuestion"
            app:layout_constraintHorizontal_bias="0.813"

            android:background="@drawable/border"
            android:layout_alignBaseline="@+id/optionA_button"
            android:layout_alignBottom="@+id/optionA_button"
            android:layout_toEndOf="@+id/optionC_button" />

        <Button
            android:id="@+id/optionC_button"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:text="Button"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/optionA_button"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/optionD_button"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0"

            android:background="@drawable/border"
            android:layout_below="@+id/optionA_button"
            android:layout_alignStart="@+id/textQuestion" />

        <Button
            android:id="@+id/optionD_button"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:text="Button"


            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/optionB_button"

            android:background="@drawable/border"
            android:layout_alignBaseline="@+id/optionC_button"
            android:layout_alignBottom="@+id/optionC_button"
            android:layout_alignStart="@+id/optionB_button" />


    </RelativeLayout>